{
  "configurations": [
    {
      "name": "MCP Inspector",
      "command": "npx @modelcontextprotocol/inspector python -m src.obsidian_mcp",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "type": "node-terminal"
    },
    {
      "name": "Run",
      "type": "node-terminal",
      "command": "python -m src.obsidian_mcp",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env"

    },
    {
      "name": "Set PYTHONPATH",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/src",
      "command": "PYTHONPATH=$PWD python -m obsidian_mcp",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",

    }
  ]
}